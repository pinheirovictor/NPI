              necessárias ao desempenho excelente dos servidores que atuam nos diversos setores da\n                    Universidade Federal do Ceará, favorecendo o autodesenvolvimento profissional e o alcance\n                    dos objetivos institucionais.\n                </h4>\n            </v-col>\n            <v-col cols=\"5\">\n                <v-form @submit.prevent=\"onSubmit\" ref=\"form\" lazy-validation v-model=\"valid\">\n                    <v-row justify=\"center\">\n                        <v-col cols=\"12\" align=\"center\">\n                            <h1 class=\"headline font-weight-bold\">Acesso ao Sistema</h1>\n                        </v-col>\n                        <span class=\"error--text\">{{error}}</span>\n                    </v-row>\n                    <v-text-field append-icon=\"person\" name=\"email\" label=\"Email\" type=\"text\"\n                              v-model=\"email\" required :rules=\"requiredRule\"></v-text-field>\n                    <v-text-field append-icon=\"lock\" name=\"password\" label=\"Senha\" id=\"password\"\n                              type=\"password\" v-model=\"password\" required :rules=\"requiredRule\"></v-text-field>\n                    <v-row justify=\"center\">\n                        <v-btn color=\"primary\" type=\"submit\" :loading=\"loading\" large>Entrar</v-btn>\n                    </v-row>\n                </v-form>\n            </v-col>\n            <v-row justify=\"space-around\" align=\"center\">\n                <v-col cols=\"5\" align=\"center\">\n                    <v-img src=\"/static/images/back.png\" alt=\"Plano de fundo\" max-width=\"450\"></v-img>\n                </v-col>\n            </v-row>\n        </v-row>\n    </v-container>\n</template>\n\n<script>\n    import { mapGetters, mapState } from 'vuex'\n\n    export default {\n        props: [\"to\", \"invalidToken\"],\n        data: () => ({\n            valid: true,\n            loading: false,\n            email: '',\n            password: '',\n            error: '',\n            requiredRule: [\n                v => !!v || 'Campo obrigatório'\n            ],\n        }),\n        created() {\n            if (this.invalidToken) {\n                this.error = 'Sua sessão expirou. Faça login novamente'\n            }\n        },\n        methods: {\n            onSubmit () {\n                this.loading = true\n                if (this.$refs.form.validate()) {\n                    this.$store.dispatch('auth/login', {email: this.email, password: this.password})\n                        .then(() => {\n                            if (this.$store.getters['auth/isAuthenticated']) {\n                                this.$router.push('/')\n                            } else {\n                                this.error = 'Usuário e/ou senha inválidos'\n                            }\n                        })\n                }\n\n                this.loading = false\n            }\n        },\n        computed: {\n            ...mapState({\n                token: state => state.auth.token\n            })\n        }\n    };\n</script>\n\n<style scoped lang=\"css\">\n\n    #logo-ufc{\n        max-width: 230px;\n    }\n\n    #img-home {\n        max-width: 70%;\n    }\n</style>\n"]}]}